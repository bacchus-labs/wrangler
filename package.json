{
  "name": "wrangler",
  "version": "1.0.0",
  "description": "Core skills library with built-in issue management MCP server",
  "private": true,
  "type": "module",
  "workspaces": [
    "mcp",
    "workflows/engine"
  ],
  "scripts": {
    "build:mcp": "npm run build -w @wrangler/mcp",
    "bundle:mcp": "npm run bundle -w @wrangler/mcp",
    "build:engine": "npm run build -w @wrangler/workflow-engine",
    "build:all": "npm run build:mcp && npm run build:engine",
    "watch:mcp": "npm run watch -w @wrangler/mcp",
    "mcp:dev": "npm run dev -w @wrangler/mcp",
    "test:mcp": "npm run test -w @wrangler/mcp",
    "test:engine": "npm run test -w @wrangler/workflow-engine",
    "test:all": "npm run test:mcp && npm run test:engine",
    "setup:hooks": "ln -sf ../../scripts/pre-commit .git/hooks/pre-commit && echo 'Pre-commit hook installed'",
    "postinstall": "npm run build:all 2>/dev/null || true",
    "prepare": "npm run build:all 2>/dev/null || true"
  },
  "keywords": [
    "mcp",
    "claude",
    "issue-management",
    "specifications"
  ],
  "author": "",
  "license": "MIT"
}
